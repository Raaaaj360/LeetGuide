{
  "manifest_version": 3,
  "name": "LeetGuide â€“ AI Problem Coach",
  "version": "1.0.0",
  "description": "Get Socratic hints for LeetCode problems powered by ChatGPT. Guided thinking, no spoilers.",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
